<ul class="list-unstyled">
  <% tasks.each do |task| %>
  <div>
    <% if current_user == task.user %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
          <p>task：<%= task.content %></p>
          <p>stasus：<%= task.status %></p>
        </div>
            <%= link_to '編集', edit_task_path(task), class: 'btn btn-success btn-sm' %>
            <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除してよろしいですか？" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
      </div>
    </li>
  </div>
  <% end %>
  <%= paginate tasks %>
</ul>


   