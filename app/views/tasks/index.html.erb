<% if @tasks.any? %>
 <% if logged_in? %>
 <h1>task投稿一覧</h1>
 <p>ログイン完了ユーザ: <%= current_user.name %></p>
 <table class="table table-striped">
     <thead>
       <tr>
         <th>id</th>
         <th>status</th>
         <th>task</th>
       </tr>
     </thead>
     <tbody>
       <% @tasks.each do |task| %>
       <% if current_user == task.user %>
         <tr>
           <td><%= link_to task.id, task %></td>
           <td><%= task.content %></td>
          <td><%= task.status  %></td>
         </tr>
       <% end %>
       <% end %>
     </tbody>
   </table>
   <div>
     <%= paginate @tasks %>
   </div>
 <% end %>
 <% end %>
 
 <% if logged_in? %>
  <div class="row">
    <aside class="col-sm-2">
      <%= link_to 'タスク作成', new_task_path(@task), class: 'btn btn-primary btn-block' %>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklists</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>





      