 <h1>task投稿一覧</h1>
 <p>ログイン完了ユーザ: <%= current_user.name %></p>
 <table class="table table-striped">
     <thead>
       <tr>
         <th>id</th>
         <th>status</th>
         <th>task</th>
       </tr>
     </thead>
     <tbody>
       <% @tasks.each do |task| %>
       <% if current_user == task.user %>
         <tr>
           <td><%= link_to task.id, task %></td>
           <td><%= task.content %></td>
          <td><%= task.status  %></td>
         </tr>
       <% end %>
       <% end %>
     </tbody>
   </table>
   <div>
     <%= paginate @tasks %>
   </div>
   <div class="row">
    <aside class="col-sm-2">
      <%= link_to 'タスク作成', new_task_path(@task), class: 'btn btn-primary btn-block' %>
    </aside>
  </div>




      